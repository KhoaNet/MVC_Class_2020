@model webAdmin.Models.ViewShoeModelAdd
@{
    ViewData["Title"] = "Add Shoe Page";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Tạo mới sản phẩm giày</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Tạo mới sản phẩm giày</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row justify-content-md-center">
            @*<div class="col-md-3">
            </div>*@
            <div class="col-md-6">
                <form class="card card-primary" asp-action="Add" asp-controller="Shoe" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>

                    <div class="card-header">
                        <h3 class="card-title"></h3>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="ShoeName">Tên giày</label>
                            <input type="text" asp-for="ShoeName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="ShoeImg">Hình giày</label>
                            <input type="file" asp-for="ShoeImg" class="form-control">
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a href="#" class="btn btn-secondary">Huỷ</a>
                        <input type="submit" value="Lưu" class="btn btn-success float-right">
                    </div>

                </form>
                <!-- /.card -->
            </div>
            @*  <div class="col-md-3">
            </div>*@
        </div>
        <div class="row">
        </div>
    </section>
    <!-- /.content -->
</div>